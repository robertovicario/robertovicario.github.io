{
    "compilerOptions": {
        "module": "ES2020",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "types": [
            "astro/client"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": [
        "src/**/*",
        "astro.config.ts"
    ]
}
